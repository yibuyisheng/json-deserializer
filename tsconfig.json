{
    "compilerOptions": {
        "moduleResolution": "node",
        "preserveSymlinks": true,
        "strict": true,
        "traceResolution": true,
        "version": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "esnext",
        "target": "es2015",
        "lib": [
            "es2015",
            "dom"
        ],
        "outDir": "./lib",
        "watch": false,
        "declaration": true,
        "declarationDir": "./types",
        "baseUrl": ".",
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "bin",
        "types",
        "**/*.spec.ts"
    ]
}
